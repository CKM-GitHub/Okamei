<h4>営業実績・見込み</h4>
<div id="main" class="main-content">
    <table class='table table-bordered' id="tblEigyouJisseki">
        <thead>
            <tr>
                <th class="align-middle text-center" rowspan="2">支店</th>
                <th class="align-middle text-center" rowspan="2">担当</th>

                <th class="align-middle text-center" colspan="2">21～25</th>

                <th class="align-middle text-center" colspan="2"><span id="endDate">26～ @Model.KubunCD</span></th>

                <th class="align-middle text-center" colspan="2">01～05</th>

                <th class="align-middle text-center" colspan="2">06～10</th>

                <th class="align-middle text-center" colspan="2">11～15</th>

                <th class="align-middle text-center" colspan="2">16～20</th>

                <th class="align-middle text-center" colspan="2">合計</th>

            </tr>
            <tr>
                <th style="text-align:center">棟</th>
                <th style="text-align:center">坪数</th>

                <th style="text-align:center">棟</th>
                <th style="text-align:center">坪数</th>

                <th style="text-align:center">棟</th>
                <th style="text-align:center">坪数</th>

                <th style="text-align:center">棟</th>
                <th style="text-align:center">坪数</th>

                <th style="text-align:center">棟</th>
                <th style="text-align:center">坪数</th>

                <th style="text-align:center">棟</th>
                <th style="text-align:center">坪数</th>

                <th style="text-align:center">棟</th>
                <th style="text-align:center">坪数</th>

            </tr>
        </thead>
        <tbody>

            @{
                var columns = ViewBag.Data.Columns;
                var idpdf = 0;
            }

            @foreach (System.Data.DataRow row in ViewBag.Data.Rows)
            {
                idpdf++;
                <tr>
                    @{
                        var count = row.ItemArray.Count();
                        var items = row.ItemArray;
                    }
                    @for (var i = 0; i < count; i++)
                    {
                        <td class="@columns[i].Caption">
                            @items[i]
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>
    <div class="form-group row">
        <div class="footer-btn mx-auto">
            <button type="button" id="btnReturn" class="btn btn-secondary">戻る</button>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">

    $(document).ready(function () {

    $('#btnReturn').click(function () {
    location.href = '@Url.Action("SetCondition", "EigyouJisseki")';
    });
        bindDataTables($('#tblEigyouJisseki'));



    });
    </script>
}