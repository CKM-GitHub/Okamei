        min-width: 50px;
    }


    #tblEigyouJisseki .Export {
        min-width: 50px
    }

    #tblEigyouJisseki .btn-primary {
        min-width: 50px;
        vertical-align: middle;
        max-height: 25px;
        line-height: 15px;
    }



    .btn {
        margin-top: 0px !important;
    }

    #tblEigyouJisseki .Shop {
        min-width: 100px;
    }

    #tblEigyouJisseki .Dutier {
        min-width: 160px;
    }

