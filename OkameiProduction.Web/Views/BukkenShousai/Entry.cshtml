@model Models.BukkenShousaiModel

@{
    ViewBag.Title = "Entry";
}

<h4 class="page-title">物件詳細登録</h4>
<div id="main" class="main-content">
    <div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label label-title pk">物件番号</label>
        </div>
        <div class="col-sm-10">
            <input type="text" class="form-control size8" disabled maxlength="8" id="BukkenNO" name="BukkenNO" value="@Model.BukkenNO" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label label-title require">担当支店</label>
        </div>
        <div class="col-sm-4 form-inline">
            @Html.DropDownListFor(
            model => model.SitenCD,
            new SelectList(Model.SitenSelectList, "Value", "DisplayText"),
            "全社",
            new { @class = "form-control size40" })
            <button type="button" id="btnSet" class="btn btn_search" nofocus>セット</button>
        </div>
        <div class="col-sm-2">
            <label for="TantouEigyouCD" class="col-form-label label-title require">担当営業マン</label>
        </div>
        <div class="col-sm-4">
            @Html.DropDownListFor(
            model => model.TantouEigyouCD,
            new SelectList(Model.EigyouStaffSelectList, "Value", "DisplayText"),
            "",
            new { @class = "form-control size50" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label label-title require">物件名</label>
        </div>
        <div class="col-sm-4">
            <input type="text" class="form-control size16" required maxlength="16" 
                   id="BukkenName" name="BukkenName" />
        </div>
        <div class="col-sm-2">
            <label class="col-form-label label-title">担当PCサポート</label>
        </div>
        <div class="col-sm-4">
            @Html.DropDownListFor(
            model => model.PCSupportCD,
            new SelectList(Model.PCSupportSelectList, "Value", "DisplayText"),
            "",
            new { @class = "form-control size50" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label label-title">住所</label>
        </div>
        <div class="col-sm-4">
            <input type="text" class="form-control size40" maxlength="50" 
                   id="Address" name="Address" />
        </div>
        <div class="col-sm-2">
            <label class="col-form-label label-title">担当CADマン</label>
        </div>
        <div class="col-sm-4">
            @Html.DropDownListFor(
            model => model.TantouCadCD,
            new SelectList(Model.CADStaffSelectList, "Value", "DisplayText"),
            "",
            new { @class = "form-control size50" })
        </div>
    </div>
    <div class="form-group row">
        <div class="main-content-footer mx-auto">
            <button type="button" id="btnReturn" class="btn btn-info">加工指示</button>
            <button type="button" id="btnReturn" class="btn btn-info">加工承諾書</button>
            <button type="button" id="btnReturn" class="btn btn-info">ﾌﾟﾚｶｯﾄ実績日報</button>
            <button type="button" id="btnReturn" class="btn btn-secondary" nofocus>戻る</button>
            <button type="button" id="btnSave" class="btn btn-primary active">登録</button>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            $('#btnReturn').click(function () {
                showConfirmMessage("Q004", function () {
                    window.location.reload();
                });
            });

            $('#btnSave').click(function () {
            });

            //初期表示
            $('#SitenCD').focus();
        });

    </script>
}
